<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <!-- Servlet Declaration -->
    <servlet>
      <servlet-name>PersonaServlet</servlet-name>
      <servlet-class>servletsControllers.PersonaServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping -->
    <servlet-mapping>
      <servlet-name>PersonaServlet</servlet-name>
      <url-pattern>/processPersona</url-pattern>
    </servlet-mapping>

    <!-- Other configurations can be added here if necessary -->
  </web-app>

